# Creating a certificate
openssl req -x509 -newkey rsa:4096 -keyout bunch-auth-update.key.pem -out bunch-auth-update.cert.pem -nodes -text

# Check the certificate : 
openssl x509 -in bunch-auth-update.cert.pem -text -noout

